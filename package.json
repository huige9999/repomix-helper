{
  "name": "repomix-helper",
  "displayName": "repomix-helper",
  "description": "Collect include/ignore relative paths and run repomix in one click.",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "repository": "https://github.com/huige9999/repomix-helper",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "repomixHelper.addInclude",
        "title": "Repomix: Add to Include"
      },
      {
        "command": "repomixHelper.addIgnore",
        "title": "Repomix: Add to Ignore"
      },
      {
        "command": "repomixHelper.run",
        "title": "Repomix: Run"
      },
      {
        "command": "repomixHelper.clear",
        "title": "Repomix: Clear List"
      },
      {
        "command": "repomixHelper.export",
        "title": "Repomix: Export Command"
      },
      {
        "command": "repomixHelper.copyFileToClipboard",
        "title": "Repomix: Copy Current File to Clipboard"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "repomixHelper.addInclude",
          "when": "resourceScheme == file",
          "group": "z_repomix@1"
        },
        {
          "command": "repomixHelper.addIgnore",
          "when": "resourceScheme == file",
          "group": "z_repomix@2"
        },
        {
          "command": "repomixHelper.copyFileToClipboard",
          "when": "resourceScheme == file",
          "group": "z_repomix@3"
        }
      ],
      "editor/context": [
        {
          "command": "repomixHelper.copyFileToClipboard",
          "when": "resourceScheme == file",
          "group": "z_repomix@1"
        }
      ]
    },
    "configuration": {
      "title": "Repomix Helper",
      "properties": {
        "repomixHelper.repomixCommand": {
          "type": "string",
          "default": "repomix",
          "description": "CLI command to run repomix (e.g., repomix or npx repomix)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}